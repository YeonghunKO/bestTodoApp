{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "requireConfigFile": false
  },

  "extends": ["react-app"],

  "env": {
    "es6": true
  },
  "rules": {
    "no-console": ["error", { "allow": ["error"] }],
    "curly": "error"
  }
}
